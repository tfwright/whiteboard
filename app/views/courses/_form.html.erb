
<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div class="error">
      <h2><%= pluralize(@course.errors.count, "error") %> prevented this course from being saved:</h2>
      <% @course.errors[:base].each do |error| %>
        <%= error %>
      <% end %>
    </div>
  <% end %>
  
  <ol> 
    <li class="string required <%= "error" if @course.errors[:title].any? %>" id="course_title"> 
      <label for="course_title">Title<abbr title="required">*</abbr></label> 
      <%= f.text_field :title %>
      <p class="inline-hints">the name of the course you are teaching</p> 
      <% @course.errors[:title].each do |error| %>
         <p class="inline-errors"><%= error %></p> 
      <% end %>
    </li> 
    
    <li class="string required <%= "error" if @course.errors[:title].any? %>" id="course_code"> 
      <label for="course_code">Code<abbr title="required">*</abbr></label> 
      <%= f.text_field :code %>
      <p class="inline-hints">a unique identifier, usually provided by the university</p> 
      <% @course.errors[:code].each do |error| %>
         <p class="inline-errors"><%= error %></p> 
      <% end %>
    </li>
  
    <li class="date required" id="course_begins_on"> 
      <h5 class="legend"><span class="label">Start date</span></h5> 
      <%= f.date_select :begins_on %>
      <% @course.errors[:begins_on].each do |error| %>
         <p class="inline-errors"><%= error %></p> 
      <% end %>
    </li>
      
    <li class="date required" id="course_ends_on"> 
      <h5 class="legend"><span class="label">End date</span></h5> 
      <%= f.date_select :ends_on %>
      <% @course.errors[:ends_on].each do |error| %>
         <p class="inline-errors"><%= error %></p> 
      <% end %>
    </li>
  </ol>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
