<%= render :partial => "courses/header" %>

<h3 style="margin-top:15px">Add a student</h3>

<%= form_for(@student, :url => enroll_course_students_path(@current_course)) do |f| %>
  <% if @student.errors.any? %>
    <div class="error">
      <h3><%= pluralize(@student.errors.count, "error") %> prevented this student from being enrolled:</h3>
      <% @student.errors[:base].each do |error| %>
        <%= error %>
      <% end %>
    </div>
  <% end %>

  <ol>
    <li class="string required <%= "error" if @student.errors[:email].any? %>">
      <label for="student_email">Email<abbr title="required">*</abbr></label>
      <%= f.text_field :email %>
      <% @student.errors[:email].each do |error| %>
         <p class="inline-errors"><%= error %></p>
      <% end %>
    </li>
  </ol>

  <div class="actions">
    <%= submit_tag "Add student" %>
  </div>
<% end %>
