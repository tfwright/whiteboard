<h1>Listing professors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Manage</th>
  </tr>

<% @professors.each do |professor| %>
  <tr>
    <td>
      <%= link_to professor.name, professor %>
    </td>
    <td>
      <%= link_to 'Edit', edit_professor_path(professor) %>
      <%= link_to 'Destroy', professor, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Professor', new_professor_path %>
