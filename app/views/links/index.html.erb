<%= render :partial => "courses/header" %>
<h3>Listing links</h3>

<table>
  <tr>
    <th>Name</th>
    <th>URL</th>
    <th>Manage</th>
  </tr>

<% @links.order("name ASC").each do |link| %>
  <tr>
    <td><%= link_to link.name, course_link_path(@current_course, link) %></td>
    <td><%= link.name %></td>
    <td>
      <%= link_to edit_course_link_path(@current_course, link), :class => "grey-button pcb" do %>
        <span>Edit</span>
      <% end %>
      <%= link_to course_link_path(@current_course, link), :method => :delete, :confirm => "Are you sure you want to delete this link?  This cannot be undone!", :class => "red-button pcb" do %>
        <span>Delete</span>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
