<h1>Your account</h1>
  
<dl>
  <dt>Name</dt>
  <dd><%= @user.name %></dd>
  <dt>Email</dt>
  <dd><%= @user.email %></dd>
</dl>

<%= link_to edit_user_path(@user), :class => "grey-button pcb" do %>
  <span>Edit account details</span>
<% end %>

<h3>Courses in which you are currently enrolled</h3>
<ul>
  <% @user.courses.each do |course| %>
    <li><%= link_to course.title, course %></li>
  <% end %>
</ul>